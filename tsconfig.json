{
  "compilerOptions": {
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "rootDirs": ["./src"],
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es7", "dom"],
    "paths": {
      "@base/*": ["./base/*"],
      "@helpers/*": ["./helpers/*"],
      "@store/*": ["./store/*"]
    },
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": ["node", "node_modules/@types", "./typings"]
  },
  "compileOnSave": false
  // "exclude": [
  //   "node_modules"
  // ],
}
